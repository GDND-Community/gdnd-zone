---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  author: string;
  date: string;
  description: string;
  imageUrl: string;
}

const { title, author, date, description, imageUrl } = Astro.props;

// Format date
const formattedDate = new Date(date).toLocaleDateString('tr-TR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="card">
  <div class="image-container">
    <Image
      src={imageUrl}
      alt="Blog görseli"
      width={800}
      height={450}
      format="webp"
      quality={80}
    />
    <div class="content-overlay">
      <h2>{title}</h2>
      <div class="meta">
        <span class="author">
          // Card Icon author
          {author}
        </span>
        <span class="date">
          // Card Icon date
          {formattedDate}
        </span>
      </div>
      <p>{description}</p>
      <button class="details-button">Detayları Gör</button>
    </div>
  </div>
</article>

<style>
  .card {
    width: 100%;
    max-width: 24rem;
    margin: 0 auto;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: scale(1.03);
  }

  .image-container {
    position: relative;
    aspect-ratio: 16 / 9;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: white;
  }

  h2 {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .meta {
    display: flex;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .author, .date {
    display: flex;
    align-items: center;
    margin-right: 1rem;
  }

  .author svg, .date svg {
    margin-right: 0.25rem;
  }

  p {
    font-size: 0.875rem;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .details-button {
    background-color: white;
    color: black;
    border: none;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .details-button:hover {
    background-color: #f0f0f0;
  }
</style>

<script>
  // Client-side JavaScript for interactivity
  document.addEventListener('astro:page-load', () => {
    const buttons = document.querySelectorAll('.details-button');
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        alert('Detaylar sayfasına yönlendiriliyorsunuz...');
        // Here you would typically navigate to the blog post detail page
      });
    });
  });
</script>
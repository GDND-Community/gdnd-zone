---
interface Props {
  eventTitle?: string;
  eventDescription?: string;
}

const { 
  eventTitle = "Event", 
  eventDescription = "Hi! Gamers New GameJAM 2024 will start" 
} = Astro.props;
---

<div class="mt-4 w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex flex-row rounded-md min-h-[2.5rem] sm:min-h-[3rem] w-full max-w-3xl mx-auto">
    <div class="bg-[#3f1fcc60] rounded-l-xl w-1/5 sm:w-1/6 flex items-center justify-center">
      <h2 class="text-center text-white font-medium font-mono text-md">
        {eventTitle}
      </h2>
    </div>
    <div class="flex flex-row items-center justify-between px-4 py-2 text-center bg-gradient-to-r from-[#3252bb70] via-[#1E1E1E] to-[#1E1E1E] rounded-r-xl flex-grow">
      <h2 class="text-white font-normal text-xs sm:text-sm mr-2 flex-grow text-left">
        {eventDescription}
      </h2>
      <button 
        class="cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#3f1fcc60] rounded-full p-1"
        aria-label="View event details"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="w-4 h-4 sm:w-5 sm:h-5" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="#888888" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M9 18l6-6-6-6" />
        </svg>
      </button>
    </div>
  </div>
</div>